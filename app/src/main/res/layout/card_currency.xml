<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding">
        <TextView
            android:id="@+id/tv_ask_currency"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/currency_selector"
            tools:text="22.1132"/>
        <ImageView
            android:id="@+id/iv_ask_arrow"
            android:layout_toStartOf="@id/tv_ask_currency"
            android:layout_alignTop="@id/tv_ask_currency"
            android:layout_alignBottom="@id/tv_ask_currency"
            android:src="@drawable/selector_arrow"
            android:padding="4dp"
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_bid_currency"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_ask_currency"
            android:layout_width="wrap_content"
            android:textColor="@color/currency_selector"
            android:layout_height="wrap_content"
            tools:text="23.1231"/>
        <ImageView
            android:id="@+id/iv_bid_arrow"
            android:layout_toStartOf="@id/tv_bid_currency"
            android:layout_alignTop="@id/tv_bid_currency"
            android:layout_alignBottom="@id/tv_bid_currency"
            android:src="@drawable/selector_arrow"
            android:padding="4dp"
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_name_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="18sp"
            android:layout_toStartOf="@id/iv_bid_arrow"
            tools:text="Доллар США"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>